<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<!-- Το παράθυρο της συνταγής. 
Με BorderPane για να έχουμε το κουμπί κλεισίματος κάτω και το περιεχόμενο στο κέντρο. -->
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="500.0" minWidth="600.0" prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.unipi.meallabapp.RecipeDetailsController">
    <center>
        <!-- ScrollPane γιατί δεν ξέρουμε το μέγεθος των οδηγιών-->
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox spacing="20.0" style="-fx-padding: 20; -fx-background-color: white;">
                    <children>
                        <!-- Header με Εικόνα και Βασικές Πληροφορίες -->
                        <HBox spacing="20.0" alignment="CENTER_LEFT">
                            <ImageView fx:id="mealImage" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 0); -fx-background-radius: 8;" />
                            <VBox spacing="10.0">
                                <Label fx:id="mealName" text="Meal Name" wrapText="true" styleClass="title-label" />
                                <HBox spacing="10.0">
                                    <Label fx:id="categoryLabel" text="Category" styleClass="chip, chip-category" />
                                    <Label fx:id="areaLabel" text="Area" styleClass="chip, chip-area" />
                                </HBox>
                            </VBox>
                        </HBox>

                        <HBox spacing="20.0">
                             <!-- Στήλη Υλικών -->
                            <VBox spacing="10.0" HBox.hgrow="ALWAYS" maxWidth="300">
                                <Label text="INGREDIENTS" styleClass="section-header" />
                                <TextArea fx:id="ingredientsArea" editable="false" wrapText="true" prefHeight="300" />
                            </VBox>

                            <!-- Στήλη Οδηγιών -->
                            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                <Label text="INSTRUCTIONS" styleClass="section-header" />
                                <TextArea fx:id="instructionsArea" editable="false" wrapText="true" prefHeight="300" style="-fx-font-size: 14px; -fx-line-spacing: 5px;" />
                            </VBox>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <Button text="Close" onAction="#handleClose" styleClass="button-secondary"/>
        </HBox>
    </bottom>
</BorderPane>
