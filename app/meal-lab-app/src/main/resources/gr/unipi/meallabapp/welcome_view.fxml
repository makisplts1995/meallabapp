<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- 
    Οθόνη καλωσορίσματος (Welcome Screen)
    Χρησιμοποιούμε StackPane για να κεντράρουμε το περιεχόμενο.
    Ο Controller που διαχειρίζεται αυτή την οθόνη είναι ο WelcomeController.
-->
<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.unipi.meallabapp.WelcomeController" styleClass="welcome-pane" prefHeight="700.0" prefWidth="1200.0" stylesheets="@style.css">
    <children>
        <!-- VBox για κάθετη στοίχιση των στοιχείων (Τίτλος, Υπότιτλος, Κουμπί) -->
        <VBox alignment="CENTER" spacing="40.0">
            <children>
                <Label text="Welcome to Meal Lab" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <Label text="Discover your next favorite meal" style="-fx-font-size: 24px; -fx-text-fill: #7f8c8d;" />
                
                <!-- Πεδίο εισαγωγής ονόματος χρήστη -->
                <VBox alignment="CENTER" spacing="10.0">
                    <Label text="Enter your name to continue:" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />
                     <!-- fx:id="usernameField" -->
                    <javafx.scene.control.TextField fx:id="usernameField" promptText="Your Name (e.g. Makis)" maxWidth="300.0" 
                                                    style="-fx-font-size: 16px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7;" />
                </VBox>

                <!-- 
                    Κουμπί για έναρξη της εφαρμογής.
                    Το onAction="#handleStart" καλεί τη μέθοδο handleStart στον Controller.
                -->
                <Button text="Start Cooking" onAction="#handleStart" styleClass="button-primary" style="-fx-font-size: 20px; -fx-padding: 15 40; -fx-cursor: hand;" />
            </children>
        </VBox>
    </children>
</StackPane>
