<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Η κύρια οθόνη της εφαρμογής (Main View).
Χρησιμοποιούμε BorderPane για τη διάταξη-->
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1200.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.unipi.meallabapp.MainController">

   <!-- Top: Η πάνω μπάρα με τον τίτλο και την αναζήτηση -->
   <top>
      <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="header-bar">
         <children>

             <Button text="Meal Lab" styleClass="icon-button" style="-fx-font-size: 18px; -fx-background-color: transparent; -fx-font-weight: bold;" />
             
             <!-- Λίστα επιλογής τρόπου αναζήτησης -->
             <ComboBox fx:id="searchTypeCombo" prefWidth="180.0" promptText="Search Mode" />
             
             <!-- Στοιχεία ελέγχου αναζήτησης (το πεδίο κειμένου και τα κουμπιά αλλάζουν ορατότητα ανάλογα με την επιλογή) -->
             <TextField fx:id="searchField" promptText="Enter search term..." prefWidth="250" onAction="#handleSearch" />
             <ComboBox fx:id="categoryCombo" promptText="Select Category" prefWidth="200.0" visible="false" managed="false" />
             <ComboBox fx:id="areaCombo" promptText="Select Area" prefWidth="200.0" visible="false" managed="false" />
             
             <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#handleSearch" text="Search Name" styleClass="button-primary"/>
             <Button fx:id="ingredientBtn" mnemonicParsing="false" onAction="#handleSearchIngredient" text="Find Ingredient" visible="false" managed="false" styleClass="button-primary" />
             
             <!-- Κουμπί για τυχαία συνταγή -->
             <!-- Κουμπί για τυχαία συνταγή -->
             <Button text="I'm Feeling Lucky" onAction="#handleRandom" styleClass="menu-button" />

             <!-- Spacer -->
            <javafx.scene.layout.Region javafx.scene.layout.HBox.hgrow="ALWAYS" />

             <!-- Πληροφορίες Χρήστη και Logout -->
             <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Label fx:id="userLabel" text="User: Guest" style="-fx-text-fill: #555; -fx-font-weight: bold;" />
                <Button text="Logout" onAction="#handleLogout" styleClass="button-secondary" style="-fx-padding: 5 15;" />
             </HBox>
         </children>
      </HBox>
   </top>
   
   <!-- Center: Το κεντρικό μέρος με το Accordion (πτυσσόμενο μενού) -->
   <center>
        <Accordion fx:id="mainAccordion">
          <panes>
            <!-- Πάνελ Αποτελεσμάτων Αναζήτησης -->
            <TitledPane text="Search Results" animated="true">
                <content>
                    <TableView fx:id="searchTable">
                        <columns>
                            <!-- Στήλες πίνακα: Όνομα, Κατηγορία, Περιοχή -->
                            <TableColumn fx:id="nameCol" text="Name" prefWidth="200">
                                <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="categoryCol" text="Category" prefWidth="100">
                                <cellValueFactory><PropertyValueFactory property="category" /></cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="areaCol" text="Area" prefWidth="100">
                                <cellValueFactory><PropertyValueFactory property="area" /></cellValueFactory>
                            </TableColumn>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </content>
            </TitledPane>
            <!-- Πάνελ Αγαπημένων -->
            <TitledPane text="My Favorites" animated="true">
                <content>
                    <TableView fx:id="favTable">
                        <columns>
                            <TableColumn text="Name" prefWidth="200">
                                <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Category" prefWidth="100">
                                <cellValueFactory><PropertyValueFactory property="category" /></cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Area" prefWidth="100">
                                <cellValueFactory><PropertyValueFactory property="area" /></cellValueFactory>
                            </TableColumn>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </content>
            </TitledPane>
            <!-- Πάνελ Ιστορικού -->
            <TitledPane text="Cooked History" animated="true">
                <content>
                    <TableView fx:id="historyTable">
                        <columns>
                            <TableColumn text="Name" prefWidth="200">
                                <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Category" prefWidth="100">
                                <cellValueFactory><PropertyValueFactory property="category" /></cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Area" prefWidth="100">
                                <cellValueFactory><PropertyValueFactory property="area" /></cellValueFactory>
                            </TableColumn>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </content>
            </TitledPane>
          </panes>
        </Accordion>
    </center>
   
   <!-- Right: Δεξιά στήλη με τις λεπτομέρειες της επιλεγμένης συνταγής -->
   <right>
      <ScrollPane fitToWidth="true" prefWidth="450.0" style="-fx-background-color: transparent; -fx-padding: 10;">
         <content>
            <VBox fx:id="detailsBox" spacing="20.0" visible="false" styleClass="details-pane">
               <children>
                  <!-- Εικόνα συνταγής -->
                  <HBox alignment="TOP_LEFT" spacing="25.0">
                     <children>
                        <ImageView fx:id="mealImage" fitHeight="220.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 0); -fx-background-radius: 8;" />
                     </children>
                  </HBox>
                  
                  <!-- Τίτλος και κατηγορία -->
                  <VBox spacing="8.0">
                      <Label fx:id="mealName" text="Meal Name" wrapText="true" styleClass="title-label" />
                       <Label fx:id="tagsLabel" text="Category | Area" styleClass="chip, chip-category" />
                  </VBox>

                  <!-- Κουμπιά ενεργειών επάνω στην επιλεγμένη συνταγή -->
                  <HBox spacing="10.0" style="-fx-padding: 5 0 0 0;">
                     <children>
                        <Button fx:id="addToFavoritesBtn" mnemonicParsing="false" onAction="#handleAddToFavorites" text="Add to Favorites" styleClass="button-primary" />
                        <Button fx:id="removeFavoriteBtn" mnemonicParsing="false" onAction="#handleRemoveFromFavorites" text="Remove Favorite" styleClass="button-danger" />
                        
                        <!-- Κουμπί για σήμανση ως cooked (εμφανίζεται σε Search & Favorites) -->
                        <Button fx:id="markAsCookedBtn" mnemonicParsing="false" onAction="#handleMarkAsCooked" text="Mark as Cooked" />
                        
                        <!-- Κουμπί για αφαίρεση από τα cooked (εμφανίζεται μόνο στο History) -->
                        <Button fx:id="removeCookedBtn" mnemonicParsing="false" onAction="#handleRemoveFromCooked" text="Mark as Uncooked" styleClass="button-secondary" />
                     </children>
                  </HBox>
                  
                  <!-- Λίστα υλικών -->
                  <Label text="INGREDIENTS" styleClass="section-header" />
                  <TextArea fx:id="ingredientsArea" editable="false" prefHeight="200.0" wrapText="true" />
                  
                  <!-- Κουμπί για οδηγίες -->
                  <Button fx:id="viewInstructionsBtn" text="View Full Instructions &amp; Details" onAction="#handleViewInstructions" styleClass="button-primary" maxWidth="Infinity" />
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </right>
   
   <!-- Bottom: Κάτω μπάρα κατάστασης -->
   <bottom>
       <HBox style="-fx-background-color: #ffffff; -fx-border-color: #eeeeee transparent transparent transparent; -fx-padding: 5 20;">
          <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #999999; -fx-font-size: 12px;" />
      </HBox>
   </bottom>
   
</BorderPane>